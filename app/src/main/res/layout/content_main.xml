<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgm0"
    tools:context="com.example.user.mini_project.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_above="@+id/start_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:text=""
        android:textColor="#14fc6c"
        android:textSize="40sp" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_above="@+id/stop_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/buttonshap"
        android:shadowColor="#A8A8A8"
        android:text="Start"
        android:textColor="#FF1C3A"
        android:textSize="20sp" />

    <Button
        android:id="@+id/stop_button"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignStart="@+id/start_button"
        android:layout_centerVertical="true"
        android:background="@drawable/buttonshap"
        android:shadowColor="#A8A8A8"
        android:text="@string/stop"
        android:textColor="#f9391b"
        android:textSize="20sp" />

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignStart="@+id/stop_button"
        android:layout_below="@+id/stop_button"
        android:layout_marginTop="19dp"
        android:background="@drawable/buttonshap"
        android:shadowColor="#A8A8A8"
        android:text="@string/reset"
        android:textColor="#fd1f0f"
        android:textSize="20sp" />
</RelativeLayout>
